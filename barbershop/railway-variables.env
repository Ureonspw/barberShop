# Variables d'environnement Railway - Barber Shop
# Copiez ces variables dans l'onglet "Variables" de votre projet Railway

APP_NAME="Barber Shop"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://votre-app-name.railway.app

# Base de données PostgreSQL (Railway génère automatiquement ces variables)
DB_CONNECTION=pgsql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Cache et sessions
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_LIFETIME=120

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail (optionnel)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@barbershop.com"
MAIL_FROM_NAME="Barber Shop"

# Variables Vite (pour les assets)
VITE_APP_NAME="Barber Shop" 